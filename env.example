# Flask Configuration
FLASK_APP=manager.app

# Solr Configuration
# For local development, use localhost
# For Docker, use http://solr:8983/solr (service name)
SOLR_HOST=http://solr:8983/solr
SOLR_CORE_STAGE=blacklight-core-stage
SOLR_CORE_PROD=blacklight-core-prod
MODE=dev

# Sets the port number that the gunicorn process will listen on
PORT=8000

# Optional: Solr Authentication
SOLR_USERNAME=
SOLR_PASSWORD=

# Data Discovery App URL (optional)
DISCOVERY_APP_URL=http://localhost:3001
SECRET_KEY=change-me-to-a-random-secret-key

# Database (SQLite) Configuration
# Relative path; persists alongside docker-compose (./manager/data.db on host)
DB_PATH=manager/data.db

# Admin User Configuration (Docker deployments only)
# Default admin user created automatically on first Docker startup
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Domain Configuration
# DOMAIN_NAME is required for Docker deployments (e.g., sdoh.metadata.local for local dev)
# LETSENCRYPT_EMAIL is optional - only needed for production HTTPS with Let's Encrypt
DOMAIN_NAME=
LETSENCRYPT_EMAIL=

# Traefik Dashboard Authentication
# Generate at: https://www.apivoid.com/tools/htpasswd-generator/
# IMPORTANT: Escape all $ signs by doubling them ($ becomes $$) for docker-compose
# Default: admin:changeme
TRAEFIK_AUTH=admin:$$2a$$10$$DJEyBEElPoadKP936EVKfOEjAAKAs/XrOzn/XnEXhpLOT4.YZuq86

# Solr Admin Authentication
# Generate at: https://www.apivoid.com/tools/htpasswd-generator/
# IMPORTANT: Escape all $ signs by doubling them ($ becomes $$) for docker-compose
# Default: admin:changeme (same hash as TRAEFIK_AUTH)
SOLR_AUTH=admin:$$2a$$10$$DJEyBEElPoadKP936EVKfOEjAAKAs/XrOzn/XnEXhpLOT4.YZuq86