# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-to-random-string
FLASK_APP=manager/app.py

# Solr Configuration
# Note: Inside Docker, use the service name 'solr' not 'localhost'
SOLR_HOST=http://solr:8983/solr

# Option 1: Stage/Prod Workflow (Recommended for production)
# Use separate cores for dev/staging and production environments
SOLR_CORE_DEV=blacklight-core-dev
SOLR_CORE_PROD=blacklight-core-prod

# Option 2: Legacy Single Core (Simpler for development)
# If you only need one core, set SOLR_CORE and leave SOLR_CORE_DEV/SOLR_CORE_PROD empty
# SOLR_CORE=blacklight-core-dev

# Solr Authentication (optional)
SOLR_USERNAME=
SOLR_PASSWORD=

# External Services (optional)
GBL_HOST=http://localhost:3000
DISCOVERY_APP_URL=http://localhost:3001

# Port (internal to container)
PORT=8000
